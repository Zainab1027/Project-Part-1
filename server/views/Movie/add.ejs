<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for Add Page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="titleTextField">Movie Title</label>
                    <input type="text" class="form-control" id="titleTextField" placeholder="Enter the Movie Title" name="Title" required>
                </div>
                <div class="form-group">
                    <label for="genreTextField">Movie Genre</label>
                    <input type="text" class="form-control" id="genreTextField" placeholder="Enter the Movie Genre" name="Genre" required>
                </div>
                <div class="form-group">
                    <label for="ratingTextField">Rating</label>
                    <input type="text" class="form-control" id="ratingTextField" placeholder="Enter the Movie Rating (0/5)" name="rating" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextArea">Movie Description</label>
                    <textarea type="text" class="form-control" id="descriptionTextArea"  placeholder="enter the Movie Description" name="Description" required></textarea>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>