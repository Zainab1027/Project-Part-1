<%- include '../Partials/header.ejs' %>
    <%- include '../Partials/main_nav.ejs' %>

        <!-- Movie Database -->
        <main class="container">
            <div class="row">
                <div class="offset-md-1 col-md-10">
                    <h1>
                        <%= title %>
                    </h1>
                    <br>
                    <a href="/movies/add" class="btn btn-primary" role="button">
                        <i class="fas fa-plus-circle"></i> Add Movie
                    </a>
                    <table class="table table-bordered table-striped table-hover">
                        <tr class="d-flex">
                            <th class="text-center col-2">Title</th>
                            <th class="text-center col-2">Genre</th>
                            <th class="text-center col-1">Year Released</th>
                            <th class="col-4">Description</th>
                            <th class="text-center col-1">Rating</th>
                            <th class="text-center col-2">Actions</th>
                        </tr>
                        <% MovieList.forEach(movie=> { %>
                            <tr class="d-flex">
                                <td class="text-center col-2">
                                    <%= movie.title %>
                                </td>
                                <td class="text-center col-2">
                                    <%= movie.genre %>
                                </td>
                                <td class="text-center col-1">
                                    <%= movie.year %>
                                </td>
                                <td class="col-4">
                                    <%= movie.description %>
                                </td>
                                <td class="text-center col-1">
                                    <%= movie.rating %>
                                </td>
                                <td class="text-center col-1">
                                    <a href="/movies/edit/<%= movie._id %>" class="btn btn-primary btn-sm">
                                        <i class="fas fa-pencil-alt"></i> Edit
                                    </a>
                                </td>
                                <td class="text-center col-1">
                                    <a href="/movies/delete/<%= movie._id %>" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash-alt"></i> Delete
                                    </a>
                                </td>
                            </tr>
                            <% }) %>
                    </table>
                </div>
            </div>
        </main>

        <%- include '../Partials/footer.ejs' %>