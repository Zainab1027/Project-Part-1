<%- include ('../Partials/header.ejs' %>
<%- include ('../Partials/main_nav.ejs' %>

<!-- add the content for the add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
        <h1><%= title %></h1>
        <form class="form" method="POST">
        <!-- to add the name in the database -->
            <div class="form-group">
                <label for="titletextfield">title</label>
                <input type="text" class="form-control" id="titletextfield" placeholder="Enter the movie title" name="title" required>
            </div>
            <div class="form-group">
                <label for="genretextfield">genre</label>
                <input type="text" class="form-control" id="genretextfield" placeholder="Enter the genre" name="genre" required>
            </div>
            <div class="form-group">
                <label for="movietextfield">year</label>
                <input type="text" class="form-control" id="yeartextfield" placeholder="Enter the year" name="year" required>
            </div>
            <div class="form-group">
            <!-- it's text area because it takes more space -->
                <label for="descriptiontextarea">description</label>
                <textArea type="text" class="form-control" id="descriptiontextarea" placeholder="Enter the description of the movie" name="description" required></textArea>
            </div>
            
            <button class="btn btn-primary" type="submit">Submit
            <i class="fas fa-edit"></i></button>

            <button class="btn btn-warning" type="submit">Cancel
            <i class="fas fa-undo"></i></button>

        </form> 
    </div>

</div>
<%- include ('../Partials/footer.ejs') %>