<%- include ../Partials/header.ejs %>
    <%- include ../Partials/main_nav.ejs %>

        <!-- Content for Add Page -->
        <div class="container">
            <div class="row">
                <div class="offset-md-3 col-md-6">
                    <h1>
                        <%= title %>
                    </h1>
                    <form class="form" method="POST">
                        <div class="form-group">
                            <label for="nameTextField">Book Title</label>
                            <input type="text" class="form-control" id="nameTextField"
                                placeholder="Enter the Book Title" name="Name" required>
                        </div>
                        <div class="form-group">
                            <label for="authorTextField">Book Author</label>
                            <input type="text" class="form-control" id="authorTextField"
                                placeholder="Enter the Book Author" name="Author" required>
                        </div>
                        <div class="form-group">
                            <label for="publishedTextField">Published</label>
                            <input type="date" class="form-control" id="publishedTextField" name="Published" required>
                        </div>
                        <div class="form-group">
                            <label for="descriptionTextArea">Book Description</label>
                            <textarea class="form-control" id="descriptionTextArea"
                                placeholder="Enter the Book Description" name="Description" required></textarea>
                        </div>
                        <div class="form-group">
                            <label for="priceTextField">Price</label>
                            <input type="text" class="form-control" id="priceTextField" placeholder="Book's Price"
                                name="Price" required>
                        </div>
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-edit"></i> Submit
                        </button>
                        <a class="btn btn-warning" href="/bookslist">
                            <i class="fas fa-undo"></i> Cancel
                        </a>
                    </form>
                </div>
            </div>
        </div>

        <%- include ../Partials/footer.ejs %>