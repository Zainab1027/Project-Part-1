<%- include ../Partials/header.ejs %>
    <%- include ../Partials/main_nav.ejs %>

        <!-- Book Database -->
        <main class="container">
            <div class="row">
                <div class="offset-md-1 col-md-10">
                    <h1>
                        <%= title %>
                    </h1>
                    <br>
                    <a href="/bookslist/add" class="btn btn-primary" role="button">
                        <i class="fas fa-plus-circle"></i> Add Book
                    </a>
                    <table class="table table-bordered table-striped table-hover">
                        <tr class="d-flex">
                            <th class="text-center col-2">Name</th>
                            <th class="text-center col-2">Author</th>
                            <th class="text-center col-1">Published</th>
                            <th class="col-4">Description</th>
                            <th class="text-center col-1">Price</th>
                            <th class="text-center col-2">Actions</th>
                        </tr>
                        <% BookList.forEach(book=> { %>
                            <tr class="d-flex">
                                <td class="text-center col-2">
                                    <%= book.Name %>
                                </td>
                                <td class="text-center col-2">
                                    <%= book.Author %>
                                </td>
                                <td class="text-center col-1">
                                    <%= book.Published %>
                                </td>
                                <td class="col-4">
                                    <%= book.Description %>
                                </td>
                                <td class="text-center col-1">
                                    <%= book.Price %>
                                </td>
                                <td class="text-center col-1">
                                    <a href="/bookslist/edit/<%= book._id %>" class="btn btn-primary btn-sm">
                                        <i class="fas fa-pencil-alt"></i> Edit
                                    </a>
                                </td>
                                <td class="text-center col-1">
                                    <a href="/bookslist/delete/<%= book._id %>" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash-alt"></i> Delete
                                    </a>
                                </td>
                            </tr>
                            <% }) %>
                    </table>
                </div>
            </div>
        </main>

        <%- include ../Partials/footer.ejs %>